<% var hideHero = typeof hideHero !== 'undefined' ? hideHero : false; %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  
  <!-- Open Graph Meta Tags -->
  <meta property="og:title" content="<%= title %>">
  <meta property="og:description" content="Sicher Shield Consultancy Pvt Ltd (SSC) provides top-tier cybersecurity services including CyberSecurity, Endpoint Security, RASP, and Performance Testing.">
  <meta property="og:image" content="/images/logo.png">
  <meta property="og:url" content="https://sichershield.com">
  <meta property="og:type" content="website">
  
  <!-- Twitter Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= title %>">
  <meta name="twitter:description" content="Sicher Shield Consultancy Pvt Ltd (SSC) provides top-tier cybersecurity services including CyberSecurity, Endpoint Security, RASP, and Performance Testing.">
  <meta name="twitter:image" content="/images/logo.png">
  
  <!-- SEO Meta Tags -->
  <meta name="description" content="Professional cybersecurity services by Sicher Shield Consultancy Pvt Ltd (SSC).">

  <!-- CSS -->
  <link rel="stylesheet" href="/css/style.css">
  
  <!-- Inline Styles to Force a Left-Aligned Hero Content
  <style>
    .hero {
      display: flex;
      flex-direction: row; /* Ensure elements are placed side by side */
      align-items: center;
      justify-content: flex-start; /* Keeps our hero content at the start (left) */
      padding: 20px;
    }
    .hero-content {
      width: 60%;      /* Adjust the width if needed */
      text-align: center; /* Explicitly align text to the left */
    }
    .hero-image {
      width: 40%;      /* Adjust image container width as desired */
      text-align: right;
    }
  </style> -->
  
  <!-- Favicon -->
  <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon">
</head>
<body>
  <!-- Header Section -->
  <header>
    <div class="logo-container">
      <img src="/images/logo.png" alt="SSC Logo" class="logo">
      <span class="company-name">SSC</span>
    </div>
    <nav>
      <ul class="menu">
        <li>
          <a href="/">Home</a>
        </li>
        <li class="dropdown">
          <a href="/services">Services</a>
          <ul class="submenu">
            <li>
              <a href="/services/CyberSecurity">
                <div class="submenu-icon">
                  <img src="/images/icon-CyberSecurity.png" alt="CyberSecurity Icon">
                </div>
                CyberSecurity
              </a>
            </li>
            <li>
              <a href="/services/rasp">
                <div class="submenu-icon">
                  <img src="/images/icon-rasp.png" alt="RASP Icon">
                </div>
                RASP
              </a>
            </li>
            <li>
              <a href="/services/endpoint">
                <div class="submenu-icon">
                  <img src="/images/icon-endpoint.png" alt="Endpoint Icon">
                </div>
                Endpoint Security
              </a>
            </li>
            <li>
              <a href="/services/performance-testing">
                <div class="submenu-icon">
                  <img src="/images/icon-performance.png" alt="Performance Testing Icon">
                </div>
                Performance Testing
              </a>
            </li>
          </ul>
        </li>
        <li>
          <a href="/about">About Us</a>
        </li>
        <li>
          <a href="/contact">Contact Us</a>
        </li>
      </ul>
    </nav>
  </header>

  <% /* Only render the default hero if the hideHero flag is not true */ %>
  <% if (!hideHero) { %>
  <section class="hero">
    <div class="hero-content">
      <h1>Welcome to Sicher Shield Consultancy Pvt Ltd (SSC)</h1>
      <p>Next-Gen Security for a Connected World</p>
    </div>
    <div class="hero-image">
      <img src="/images/logo.png" alt="Attached Element" class="rotating-image">
    </div>
  </section>
  <% } %>

  <main>
    <!-- Main content goes here -->
  </main>
</body>
</html>
